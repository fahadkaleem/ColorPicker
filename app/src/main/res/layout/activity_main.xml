<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">
            <View
                android:id="@+id/color_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/tv_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/white"
                android:textAllCaps="true"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp">
            <TextView
                android:id="@+id/tv_red"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:text="@string/default_color_value"
                android:textColor="@color/red_dial"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_green"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:text="@string/default_color_value"
                android:textSize="20sp"
                android:textColor="@color/green_dial"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_blue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:text="@string/default_color_value"
                android:textSize="20sp"
                android:textColor="@color/blue_dial"
                android:gravity="center"
                android:layout_weight="1"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp">

            <com.sdsmdg.harjot.crollerTest.Croller
                android:id="@+id/red_croller"
                android:label="@string/red_label"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:back_circle_color="@color/back_circle_color"
                app:indicator_color="@color/indicator_color"
                app:indicator_width="10"
                app:is_continuous="true"
                app:label_color="@color/label_color"
                app:main_circle_color="@color/white"
                app:max="256"
                app:progress_secondary_color="@color/progress_secondary_color"
                app:start_offset="45"
                app:progress_primary_color="@color/red_dial"/>

            <com.sdsmdg.harjot.crollerTest.Croller
                android:id="@+id/green_croller"
                android:label="@string/green_label"
                app:progress_primary_color="@color/green_dial"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:back_circle_color="@color/back_circle_color"
                app:indicator_color="@color/indicator_color"
                app:indicator_width="10"
                app:is_continuous="true"
                app:label_color="@color/label_color"
                app:main_circle_color="@color/white"
                app:max="256"
                app:progress_secondary_color="@color/progress_secondary_color"
                app:start_offset="45"
                />

            <com.sdsmdg.harjot.crollerTest.Croller
                android:id="@+id/blue_croller"
                android:label="@string/blue_label"
                app:progress_primary_color="@color/blue_dial"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:back_circle_color="@color/back_circle_color"
                app:indicator_color="@color/indicator_color"
                app:indicator_width="10"
                app:is_continuous="true"
                app:label_color="@color/label_color"
                app:main_circle_color="@color/white"
                app:max="256"
                app:progress_secondary_color="@color/progress_secondary_color"
                app:start_offset="45" />
        </LinearLayout>
</LinearLayout>